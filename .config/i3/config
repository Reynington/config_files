		bindsym h move workspace to output left
		bindsym j move workspace to output down
		bindsym k move workspace to output up
		bindsym l move workspace to output right
		bindsym n move workspace to output next

		bindsym $win+h workspace prev
	}

	mode $mode_select_mode{
		bindsym r mode "resize"
		bindsym w exec i3-input -F 'rename workspace to "%s"' -P 'New name: '; mode "default"
		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $win+Shift+s mode "default"
	}

	# resize window (you can also use the mouse for that)
	mode "resize" {
		$default
		# These bindings trigger as soon as you enter the resize mode

		set $size_step 40
		set $size_step_small 1
		set $size_set_small 30
		set $size_set_big 99

		# Show help for the mode via a notification
		bindsym F1 exec notify-send "Resize mode" $resize_help

		# Normal size changes
			bindsym h resize shrink width $size_step px
			bindsym j resize grow height $size_step px
			bindsym k resize shrink height $size_step px
			bindsym l resize grow width $size_step px

		# Precise size changes
			bindsym Shift+h resize shrink width $size_step_small px
			bindsym Shift+j resize grow height $size_step_small px
			bindsym Shift+k resize shrink height $size_step_small px
			bindsym Shift+l resize grow width $size_step_small px

		# All-or-nothing size changes
			bindsym Control+h resize set width $size_set_small ppt
			bindsym Control+j exec "/home/zglp1387/.config/i3/resize.fish h"
			bindsym Control+k resize set height $size_set_small ppt
			bindsym Control+l exec "/home/zglp1387/.config/i3/resize.fish w"

		# Ask user for a specific size (in %)
			bindsym w exec i3-input -F 'resize set width %s ppt' -P 'Set width (%): '
			bindsym x exec i3-input -F 'resize set height %s ppt' -P 'Set height (%): '


		# Make focused floating window fill all screen but keep window borders and leave i3bar visible
		bindsym b resize set width 100 ppt, \
				  resize set height 100 ppt, \
				  resize shrink height 31 px, \
				  move position 0 0, \
				  mode "default"

		# Make focused floating window small and centered
		bindsym s [floating con_id=__focused__] resize set width 800, \
				  resize set height 600, \
				  move position center, \
				  mode "default"

		# back to normal: Enter or Escape or $mod+r
			bindsym Return mode "default"
			bindsym $win+r mode "default"
	}


